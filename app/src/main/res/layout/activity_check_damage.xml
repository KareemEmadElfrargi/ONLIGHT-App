<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CheckDamageActivity">
    <include
        android:id="@+id/check_damage"
        layout="@layout/toolbar_check_damage_activity"/>
    <TextView
        android:layout_below="@+id/check_damage"
        android:id="@+id/checkDamage_txt_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_off"
        android:fontFamily="@font/cairo_black"
        android:gravity="center"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:textSize="30sp"
 />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_below="@+id/check_damage"
        android:id="@+id/animation_damage_exist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/error"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_damage_Not_exist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/well"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_damage_disconnect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/disconnect"
        app:lottie_autoPlay="true"
        android:visibility="visible"
        app:lottie_loop="true"/>
</RelativeLayout>